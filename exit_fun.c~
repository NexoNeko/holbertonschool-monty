#include "main.h"

int exit_fun(int value)
{
	switch (value)
	{
	case 0:
		return(0);
		break;
	case 1: /** If no file or 0 argument*/
		fprintf(stderr, "USAGE: monty file\n");
		break;
	case 2: /** not possible to open the file */
		fprintf(stderr, "Error: Can't open file <FILE>");

	}
	exit(EXIT_FAILURE);
}
